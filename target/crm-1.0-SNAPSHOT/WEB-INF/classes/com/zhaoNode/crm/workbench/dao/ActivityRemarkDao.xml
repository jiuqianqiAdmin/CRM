<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhaoNode.crm.workbench.dao.ActivityRemarkDao">
    <update id="updateRemark">
        update tbl_activity_remark
        set
        noteContent=#{noteContent},editFlag=#{editFlag},editTime=#{editTime},editBy=#{editBy}
        where id=#{id}
    </update>
    <insert id="saveRemark">
        insert into tbl_activity_remark
        (
        id,
        noteContent,
        createTime,
        createBy,
        editFlag,
        activityId
        )
        values
        (
        #{id},
        #{noteContent},
        #{createTime},
        #{createBy},
        #{editFlag},
        #{activityId}
        )
    </insert>
    <delete id="deleteRemark">
        delete from tbl_activity_remark where id=#{id}
    </delete>
    <select id="getRemarkListByAid" resultType="ActivityRemark">
        select * from tbl_activity_remark where activityid=#{activityId}
    </select>
<select id="getCountByArr" resultType="int">
    select count(*)
    from
    tbl_activity_remark
    where activityid in
    <foreach collection="array" item="aid" open="(" close=")" separator=",">
    #{aid}
    </foreach>
</select>
    <delete id="deleteByArr">
        delete from
        tbl_activity_remark
        where activityid in
        <foreach collection="array" item="aid" open="(" close=")" separator=",">
        #{aid}
        </foreach>
    </delete>
</mapper>